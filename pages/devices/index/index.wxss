.swiper-item{
  padding: 0 15px 0 15px;
}
.slide-image{
  width: 100%;
  max-height: 200px;
  overflow: hidden;
}

.flex-wrp{
    height: 120px;
    display:flex;
}
.flex-item{
    width: 120px;
    height: 120px;
}
.flex-image {
  width: 98px;
  height: 98px;
  border-radius:49px;
  overflow: hidden;
}

.product-title {
  display: flex;
  flex-direction: column;
  text-align: center;
  font-size: 32rpx;
  color: #fff;
  padding: 50rpx 0 20rpx;
}
.product-intro {
  display: flex;
  flex-direction: column;
  text-align: center;
  font-size: 24rpx;
  color: #fff;
  padding: 20rpx;
  background-color: rgba(104, 171, 194, .5);
  font-style: italic;
}

.menu-item {
  display: flex;
  justify-content: space-between;
  height: 60rpx;
  margin: 20rpx 0;
  border-bottom: 1px solid #eee;
  line-height: 60rpx;
}
.menu-item-title-item {
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  height: 100%;
}
.menu-item-title-item-text {
  font-size: 36rpx;
  color: #00CC99;
}
.menu-item-title-item-arrow {
  width: 48rpx;
  height: 48rpx;
  margin: 8rpx 0;
}

.info{
  padding: 200rpx 0;
  text-align: center;
  color: #CCCC66;
  font-size: 36rpx;
}

.marquee {
  display: block;
  width: 100%;
  height: 40rpx;
}

.marquee_box {
  width: 100%;
  position: relative;
  margin-top: -48rpx;
}

.marquee_text {
  white-space: nowrap;
  position: absolute;
  top: 0;
}

.marquee_box .title {
  border-left: 10rpx solid #ccc;
  background: #ececec;
}

.marquee_panel {
  margin: 0 20rpx 20rpx 0;
  border-left: 10rpx solid #ccc;
  font-size: 26rpx;
}

.marquee_panel>view {
  padding: 10rpx;
  background: #ececec;
  border-radius: 0 20rpx 20rpx 0;
}